@model UpdateAboutDto
@{
    ViewData["Title"] = "UpdateAbout";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="card">
    <form method="post">
        <input type="hidden" asp-for="AboutId" />
        <div class="card-header">
            <div class="card-title">Update the About Section</div>
            <a href="/About/AboutList/">< Go back</a>
        </div>
        <div class="card-body">
            <div class="form-group form-group-default">
                <label>Title</label>
                <input asp-for="AboutTitle" type="text" class="form-control" placeholder="About us..">
            </div>
            <div class="form-group">
                <label>Description</label>
                <textarea asp-for="AboutDescription" placeholder="We are a corporation founded by people who want to make peoples access to healthy food much more easy.." class="form-control"></textarea>
            </div>
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-success rounded-4">
                <i class="fas fa-upload"></i> &nbsp;
                Update
            </button>
        </div>
    </form>
</div>