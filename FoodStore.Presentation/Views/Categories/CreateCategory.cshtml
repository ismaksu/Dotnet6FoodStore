@model Category

@{
    ViewData["Title"] = "CreateCategory";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="card">
    <form method="post">
        <div class="card-header">
            <div class="card-title">Create A New Category</div>
            <a href="/Categories/CategoryList/">< Go back</a>
        </div>
        <div class="card-body">
            <div class="form-group form-group-default">
                <label>Category Name</label>
                <input asp-for="CategoryName" type="text" class="form-control" placeholder="Vegetables..">
                <input type="hidden" asp-for="CategoryStatus" value="true" />
            </div>
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-primary rounded-4">
                <i class="fas fa-plus"></i> &nbsp;
                Create
            </button>
        </div>
    </form>
</div>