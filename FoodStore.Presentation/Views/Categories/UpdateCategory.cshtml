@model Category
@{
    ViewData["Title"] = "UpdateCategory";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="card">
    <form method="post">
        <div class="card-header">
            <div class="card-title">Update Category</div>
            <a href="/Categories/CategoryList/">< Go back</a>
        </div>
        <div class="card-body">
            <div class="form-group">
                <label>Id</label>
                <input type="text" value="@Model.CategoryId" class="form-control disabled" disabled/>
            </div>
            <br />
            <div class="form-group form-group-default">
                <label>Category Name</label>
                <input asp-for="CategoryName" type="text" class="form-control" placeholder="Vegetables..">
                <input type="hidden" asp-for="CategoryStatus" />
                <input type="hidden" asp-for="CategoryId" />
            </div>
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-success rounded-4">
                <i class="fas fa-upload"></i> &nbsp;
                Update
            </button>
        </div>
    </form>
</div>