@model List<Category>

@{
    ViewData["Title"] = "CategoryList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="row">
    <div class="card">
        <div class="card-header">
            <div class="card-title">Category List</div>
            <a href="/Categories/CreateCategory/">+ Create a new category</a>
        </div>
        <div class="card-body">
            <table class="table table-hover">
                <thead>
                    <tr class="text-center">
                        <th scope="col">#</th>
                        <th scope="col">Name</th>
                        <th scope="col">Status</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var cat in Model)
                    {
                        <tr class="text-center">
                            <td>@cat.CategoryId</td>
                            <td>@cat.CategoryName</td>
                            <td>@(cat.CategoryStatus ? "Enabled" : "Disabled")</td>
                            <td>
                                <a href="/Categories/DeleteCategory/@cat.CategoryId" class="btn btn-outline-danger rounded-3">Delete</a>
                                <a href="/Categories/UpdateCategory/@cat.CategoryId" class="btn btn-outline-info rounded-3">Update</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>