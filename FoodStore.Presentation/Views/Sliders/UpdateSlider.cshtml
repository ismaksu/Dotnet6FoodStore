@model UpdateSliderDto
@{
    ViewData["Title"] = "UpdateSlider";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="card">
    <form method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="SliderId" />
        <input type="hidden" asp-for="ImageUrl" />
        <div class="card-header">
            <div class="card-title">Update the Slider</div>
            <a href="/Sliders/SliderList/">< Go back</a>
        </div>
        <div class="card-body">
            <div class="form-group form-group-default">
                <label>Slider Title</label>
                <input asp-for="SliderTitle" type="text" class="form-control" placeholder="Check our discounts..">
            </div>
            <div class="form-group form-group-default">
                <label>Slider URL</label>
                <input asp-for="SliderUrl" type="text" class="form-control" placeholder="/Products/ProductList/..">
            </div>
            <div class="form-group">
                <label>Slider Image:</label>
                <input name="file" type="file" class="form-control-file" id="exampleFormControlFile1">
            </div>
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-success rounded-4">
                <i class="fas fa-upload"></i> &nbsp;
                Update
            </button>
        </div>
    </form>
</div>